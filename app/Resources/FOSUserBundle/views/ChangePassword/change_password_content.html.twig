{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
<div>
    <div class="form-group">
        {{ form_label(form.current_password, 'form.current_password'|trans, {'label_attr': {'class': 'control-label'}}) }}
        {{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.current_password) }}
    </div>

    <div class="form-group">
        {{ form_label(form.plainPassword.first, 'form.new_password'|trans, {'label_attr': {'class': 'control-label'}}) }}
        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.plainPassword.first) }}
    </div>

    <div class="form-group">
        {{ form_label(form.plainPassword.second, 'form.new_password_confirmation'|trans, {'label_attr': {'class': 'control-label'}}) }}
        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.plainPassword.second) }}
    </div>
</div>

<br>

<div>
    <input type="submit" class="btn btn-lg btn-primary btn-block" value="{{ 'change_password.submit'|trans }}"/>
</div>
{{ form_end(form) }}